<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns		= "http://www.w3.org/ns/widgets"
	xmlns:gap	= "http://phonegap.com/ns/1.0"
	id		= "com.snowpool.mobileapp"
  versionCode="160"
	version 	= "2.1.0">

	<name>Snowpool</name>
  <preference name="phonegap-version" value="2.5.0" />
	<description>
    A mobile application for snowpool.org
	</description>
	<author href="http://snowpool.org"
		email="info@snowpool.org">
	  Snowpool
	</author>

	<gap:platforms>
		<gap:platform name="android" minVersion="2.1" />
		<gap:platform name="ios" />
	</gap:platforms>


<!-- new ios dimensions -->
<gap:splash src="splash/ios/Default.png" gap:platform="ios" width="320" height="480" />
<gap:splash src="splash/ios/Default_at_2x.png" gap:platform="ios" width="640" height="960" />
<gap:splash src="splash/ios/Default_iphone5.png" gap:platform="ios" width="640" height="1136" />
<gap:splash src="splash/ios/Default-Landscape.png" gap:platform="ios" width="1024" height="768" />
<gap:splash src="splash/ios/Default-Portrait.png" gap:platform="ios" width="768" height="1024" />
<gap:splash src="splash/ios/Default-Landscape_at_2x.png" gap:platform="ios" width="2048" height="1496" />
<gap:splash src="splash/ios/Default-Portrait_at_2x.png" gap:platform="ios" width="1536" height="2048" />

<gap:splash src="splash/ios/Default.png"  gap:platform="android" gap:density="ldpi"  />
<gap:splash src="splash/ios/Default_iphone5.png"  gap:platform="android" gap:density="mdpi"  />
<gap:splash src="splash/ios/Default-Portrait_at_2x.png"  gap:platform="android" gap:density="hdpi"  />
<gap:splash src="splash/ios/Default-Portrait_at_2x.png"  gap:platform="android" gap:density="xhdpi"  />

<icon src="icons/ios/classic.png" gap:platform="ios" width="57" height="57" />
<icon src="icons/ios/ipad.png" gap:platform="ios" width="72" height="72" />
<icon src="icons/ios/retina.png" gap:platform="ios" width="114" height="114" />
<icon src="icons/ios/retina_ipad.png" gap:platform="ios" width="144" height="144" />
<!-- end ios dimensions -->




  <preference name="permissions" value="none"/>

  <!-- only want to target phones -->
  <preference name="target-device" value="handset" />
</widget>
